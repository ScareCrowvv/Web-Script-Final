<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>

<body class="bg-light" style="background-image: url(/Assets/images/background.jpg); background-size: cover; background-position: center; position: relative;">
    <main class="container" style="position: relative; z-index: 1;">
        <% if (message.length > 0) { %>
            <div class="alert alert-danger text-center mt-4">
                <%= message %>
            </div>
        <% } %>

        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6">
                <div class="p-4 rounded bg-light shadow" style="border: 6px solid rgb(12, 34, 61);">
                    <h1 class="text-center mb-4">Please Login</h1>
                    <form method="post" autocomplete="off">
                        <fieldset class="form-group">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" name="username" placeholder="Enter the username" id="username" required autofocus>
                        </fieldset>
                        <fieldset class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter the password" id="password" required>
                        </fieldset>
                        <div class="text-center mt-3">
                            <a href="/register" class="btn btn-primary px-4" style="margin-bottom: 10px;">Register Here</a>
                        </div>
                        <fieldset class="form-group text-center">
                            <input type="submit" class="btn btn-success px-4" value="Login">
                            <a href="/">
                                <input type="button" class="btn btn-warning px-4" value="Cancel">
                            </a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </main>
<%- include ../Partials/footer.ejs%>
</body>
