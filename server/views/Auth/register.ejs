<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>

<main class="container">

    <!--Message Area-->
    <% if (message.length > 0){ %>
        <div class="alert alert-danger">
            <%= message %>

        </div>

    <% } %>

    <div class="row">

        <div class="offser-md4 cold-md-4">

            <h1>Register</h1>
            
            <form method="post" autocomplete="off">
                 <fieldset class="form-group">

                    <label for="username"></label>
                    <input type="text" class="form-control" name="username" placeholder="Enter the username" id="username" required autofocus>

                 </fieldset>

                 <fieldset class="form-group">

                    <label for="password"></label>
                    <input type="text" class="form-control" name="password" placeholder="Enter the password" id="password" required>

                 </fieldset>

                 <fieldset class="form-group">

                    <label for="email"></label>
                    <input type="text" class="form-control" name="email" placeholder="Enter the email" id="email" required>

                 </fieldset>

                 <fieldset class="form-group">

                    <label for="displayName"></label>
                    <input type="text" class="form-control" name="displayName" placeholder="Enter the display displayName" id="displayName" required>

                 </fieldset>

                 <fieldset class="form-group">

                    <input type="submit" class="btn btn-success" value="register">
                    <a href="/">
                        <input type="button" class="btn btn-warning" value="Cancel">
                    </a>

                 </fieldset>

                </form>

        </div>

    </div>


</main>



