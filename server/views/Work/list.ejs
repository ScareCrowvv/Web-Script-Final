<%- include ../Partials/header.ejs %>

<body class="bg-light" style="background-image: url(/Assets/images/background.jpg); background-size: cover; background-position: center; position: relative;">
    <div class="container" >
        <%- include ../Partials/main_nav.ejs %>

        <div class="row justify-content-center align-items-center min-vh-100" style="position: relative; z-index: 1;">
            <div class="col-md-10">
                <br>
                
                <%if (typeof displayName=='string' && displayName) { %>
                
                <a href="/workslist/add" class="btn btn-sm mb-3" style="display: inline-block; text-align: left; background-color: rgb(12, 34, 61); color: white;">
                    <i class="fas fa-plus-circle"></i> Add Schedule
                </a>
                <%}%>
                    <table class="table table-bordered table-striped table-hover">
                        <tr class="d-flex">
                            <%if (typeof displayName=='string' && displayName) { %>
                            <th class="text-center col-3">Employee</th>
                            <th class="text-center col-1">Sun</th>
                            <th class="text-center col-1">Mon</th>
                            <th class="text-center col-1">Tue</th>
                            <th class="text-center col-1">Wed</th>
                            <th class="text-center col-1">Thu</th>
                            <th class="text-center col-1">Fri</th>
                            <th class="text-center col-1">Sat</th>
                            <th class="text-center col-1">Edit</th>
                            <th class="text-center col-1">Delete</th>
                            <% } else { %>

                            <th class="text-center col-3">Employee</th>
                            <th class="text-center col-1">Sun</th>
                            <th class="text-center col-1">Mon</th>
                            <th class="text-center col-1">Tue</th>
                            <th class="text-center col-1">Wed</th>
                            <th class="text-center col-1">Thu</th>
                            <th class="text-center col-1">Fri</th>
                            <th class="text-center col-1">Sat</th>

                                <% } %>
                        </tr>
                        <% for (let count = 0; count < WorkList.length; count++) { %>
                        <tr class="d-flex">
                            <%if (typeof displayName=='string' && displayName) { %>
                            <td class="text-center col-3"><%= WorkList[count].Name %></td>
                            <td class="text-center col-1"><%= WorkList[count].Sun %></td>
                            <td class="text-center col-1"><%= WorkList[count].Mon %></td>
                            <td class="text-center col-1"><%= WorkList[count].Tue %></td>
                            <td class="text-center col-1"><%= WorkList[count].Wed %></td>
                            <td class="text-center col-1"><%= WorkList[count].Thu %></td>
                            <td class="text-center col-1"><%= WorkList[count].Fri %></td>
                            <td class="text-center col-1"><%= WorkList[count].Sat %></td>
                            <td class="text-center col-1">
                                <a href="/workslist/edit/<%= WorkList[count]._id %>" class="btn btn-sm" style="background-color: rgb(12, 34, 61); color: white;">
                                    <i class="fas fa-pencil-alt"></i> 
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/workslist/delete/<%= WorkList[count]._id %>" 
                                   class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Are you sure you want to delete this schedule?');">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>

                            <%} else { %>

                            <td class="text-center col-3"><%= WorkList[count].Name %></td>
                            <td class="text-center col-1"><%= WorkList[count].Sun %></td>
                            <td class="text-center col-1"><%= WorkList[count].Mon %></td>
                            <td class="text-center col-1"><%= WorkList[count].Tue %></td>
                            <td class="text-center col-1"><%= WorkList[count].Wed %></td>
                            <td class="text-center col-1"><%= WorkList[count].Thu %></td>
                            <td class="text-center col-1"><%= WorkList[count].Fri %></td>
                            <td class="text-center col-1"><%= WorkList[count].Sat %></td>
                            <td class="text-center col-1"></td>
                            <td class="text-center col-1"></td>
                            
                                

                        <% } %>
                        
                        </tr>
                        
                        <%} %>

                    </table>

                    
            </div>
        </div>
    </div>

    <%- include ../Partials/footer.ejs %>
</body>
